<% if @task.completed %>
  <h2><i class="fas fa-check-square"></i> <%= @task.title %></h2>
  <p><%= @task.details %></p>
  <%else %>
  <h2><i class="fas fa-square"></i> <%= @task.title %></h2>
  <p><%= @task.details %></p>
  <%end %>

<p><%= link_to "Edit", edit_task_path%></p>
<%= link_to task_path(@task), method: :delete do %>
  <p>Delete</p>
<% end %>
<p><%= link_to "Go back", tasks_path%></p>
